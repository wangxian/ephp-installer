#!/usr/bin/env php
<?php
// Swoole server config
// See Wiki:
//   - https://wiki.swoole.com/wiki/page/274.html
//   - https://wiki.swoole.com/wiki/page/620.html
$config = [
    'reactor_num'     => 1,
    'worker_num'      => 2,
    'task_worker_num' => 0,
    'task_async'      => true,

    // Enable websocket
    'enable_websocket'=> true,

    // Close build-in coroutineï¼Œif need using `mysqlco` db driver, set `enable_coroutine=true`
    'enable_coroutine' => false,
    'max_coroutine'    => 5000,

    // Async stop worker
    'reload_async'  => true,
    'max_wait_time' => 30,

    // If setting `MAX_REQUEST=1` environment, in order to facilitate the development force max_request=1
    // eg: MAX_REQUEST=1 bin/webswoole
    'max_request' => getenv('MAX_REQUEST') ? getenv('MAX_REQUEST') : 2000,

    'host' => '0.0.0.0',
    'port' => 8000
];

/*
|--------------------------------------------------------------------------
| Register The Composer Auto Loader
|--------------------------------------------------------------------------
|
| Composer provides a convenient, automatically generated class loader
| for our application. We just need to utilize it! We'll require it
| into the script here so that we do not have to worry about the
| loading of any our classes "manually". Feels great to relax.
|
 */

require __DIR__ . '/../vendor/autoload.php';

/*
|--------------------------------------------------------------------------
| Turn On The Lights
|--------------------------------------------------------------------------
|
| We need to illuminate PHP development, so let us turn on the lights.
| This bootstraps the framework and gets it ready for use, then it
| will load up this application so that we can run it and send
| the responses back to the browser and delight our users.
|
 */

require_once __DIR__ . '/../bootstrap/bootstrap.php';

// Create production server
$http = \ePHP\Core\Server::init()->createServer($config);

// Register a task Listener for handle Async Task
// Backend Task
// $http->server->on('task', function (swoole_server $server, $task_id, $from_id, $data)
// {
//     var_dump("[onTask]receive data=". $data);
//     go(function() {
//       co::sleep(5);
//       echo 'finish Coroutine task......';
//     });
//     echo 'finish task......';
// });

$http->start();
